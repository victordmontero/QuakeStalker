<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="15dp"
        android:padding="15dp"
        android:background="@color/grey">

        <TextView
            android:id="@+id/magnitude_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="54dp"
            android:text="3.2" />

        <TextView
            android:id="@+id/place_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/magnitude_detail"
            android:textSize="24dp"
            android:text="Los Jardines del Sur, Santo Domingo" />

        <TextView
            android:id="@+id/date_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/place_detail"
            android:textSize="12dp"
            android:text="10:45 PM - 13/10/19" />
    </RelativeLayout>

</LinearLayout>